#!/usr/bin/env bash
set -euo pipefail

run_with_log() {
    local log_file="$1"
    shift

    set +e
    if command -v stdbuf >/dev/null 2>&1; then
        stdbuf -oL -eL "$@" 2>&1 | tee "$log_file"
    else
        "$@" 2>&1 | tee "$log_file"
    fi
    local cmd_status=${PIPESTATUS[0]}
    set -e

    return "$cmd_status"
}

./Allmesh
run_with_log log.foamSetupCHT foamSetupCHT
run_with_log log.foamMultiRun foamMultiRun
paraFoam -touchAll > /dev/null 2>&1 || true
